/* pages/index/index.wxss */
.page-section{
  margin-bottom: 20rpx;
}
.book-image{
  width: 210rpx;
  height: 300rpx;
}
.book-title {
  font-weight: bold;
  display: block;
}
.flex-wrp {
  display: flex;
}

.home {
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
}
.banner {
  padding: 20rpx 40rpx 0;
}
.slide-item {
  margin: 0 auto;
  border-radius: 15rpx;
}
.slide-image {
  width: 670rpx;
  height: 290rpx;
  border-radius: 15rpx;
}
.title {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.title-item{
    flex:1;
    color:#fff;
    font-size:26rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title-icon {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  background: #d33a31;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title-image-icon {
  width: 40rpx;
  height: 40rpx;
}
.songlist {
  padding: 40rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.songlist-title {
  display: flex;
  justify-content: space-between;
  color: #fff;
}
.songlist-title  .square {
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
.personalized {
  width: 670rpx;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  justify-content: space-between;
}
.personalized-item {
  flex: 0 0 31%;
  padding: 20rpx 0;
  font-size: 26rpx;
  position: relative;
}
.playCount {
  position: absolute;
  color: #fff;
  top: 20rpx;
  right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
}
.playCount .play-icon {
  width: 28rpx;
  height: 28rpx;
}
.personalized-pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.personalized-title {
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  color: #fff;
}

.tab-header {
  display: flex;
  color: #fff;
  justify-content: space-between;
}
.tab-header_title {
  display: flex;
  align-items: center;
}
.tab-header_title-item {
  padding: 0 10rpx;
  color: rgba(255, 255, 255, 0.2);
  font-size: 34rpx;
  width: 80rpx;
}
.tab-header_title-item:first-child::before {
  display: none;
}
.tab-header_title-item::before {
  position: relative;
  content: '';
  left: -5px;
  border-left: 1rpx solid rgba(255, 255, 255, 0.2);
  display: inline-block;
  height: 25rpx;
  line-height: 25rpx;
}
.tab-header_title-item-active {
  color: #fff;
  font-size: 38rpx;
  transition: font-size 0.1s;
} 
.tab-header-more {
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.song-row {
  display: flex;
  justify-content: space-between;
}